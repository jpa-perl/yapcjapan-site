      {
        items.map((item) => (
          <div class="flex items-center justify-center p-1 w-1/2 lg:w-1/3">
            {item.url ? (
              <a href={item.url} target="_blank" class="w-full h-full">
                <Image
                  src={item.image}
                  alt={item.name}
                  class="w-full h-full object-cover bg-white rounded-[5px]"
                />
              </a>
            ) : (
              <Image
                src={item.image}
                alt={item.name}
                class="w-full h-full object-cover bg-white rounded-[5px]"
              />
            )}
          </div>
        ))
      }
    </div>
  </div>
</div>
