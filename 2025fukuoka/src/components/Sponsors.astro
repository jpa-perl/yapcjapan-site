function getSponsorClass(type: string) {
  switch (type) {
    case "perl":
      return "w-1/1 md:w-1/2 max-w-[500px]";
    case "platinum":
      return "w-1/2 md:w-1/3 max-w-[400px]";
    case "gold":
      return "w-1/2 md:w-1/4 max-w-[300px]";
    case "silver":
      return "w-1/2 md:w-1/4 max-w-[300px]";
    case "bronze":
      return "w-1/3 md:w-1/4 max-w-[200px]";
    case "ご当地スポンサー":
      return "w-1/3 md:w-1/5";
    default:
      return "w-1/3 md:w-1/5";
  }
}
---

<style>
  .sponsors {
    aspect-ratio: 1/1;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 10px;
  }

  .sponsors img {
    background-color: var(--color-white);
    border-radius: 5px;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>

<div id="sponsors" class="flex flex-col gap-[calc(130*var(--scale))]">
  <OutlinedTitle title="スポンサー" subtitle="Sponsors" bg="text-primary" />
  <div class="py-[calc(60*var(--scale))]">
    {
      sponsors.map((s) => (
        <div class="mb-[calc(50*var(--scale))]">
          <h3 class="text-2xl md:text-[calc(36*var(--scale))] capitalize font-bold text-center pb-[calc(20*var(--scale))]">
            {s.type}
          </h3>
          <div class="content-box flex flex-wrap justify-center">
            {s.sponsors.map((sponsor) => (
              <div class={`sponsors ${getSponsorClass(s.type)}`}>
                <a href={sponsor.link} target="_blank">
                  <Image
                    src={sponsor.logo}
                    alt={sponsor.name}
                    class="max-w-full max-h-full object-contain"
                  />
                </a>
              </div>
            ))}
          </div>
        </div>
      ))
    }
  </div>
</div>
