---
const announcements = [
  {
    date: "2025.9.15",
    content: "YAPC::Asia 2025 FukuokaのWebサイトを公開しました",
  },
  {
    date: "2025.8.20",
    content: "当日ボランティアスタッフを募集します",
    link: "https://blog.yapcjapan.org/entry/2025/08/20/180000",
  },
  {
    date: "2025.8.15",
    content: "チケット販売を開始します",
    link: "https://blog.yapcjapan.org/entry/yapc-fukuoka-2025-ticket",
  },
];
---

<div class="flex flex-col gap-[20px] max-w-[1000px] mx-auto">
  <div class="flex flex-col gap-1 sm:gap-[7px] items-center">
    <h2 class="text-white text-[20px] sm:text-[26px] font-bold text-center">
      お知らせ
    </h2>
    <div class="flex flex-col gap-[2px] w-full">
      <div class="bg-white h-[1px] w-full"></div>
      <div class="bg-white h-[2px] w-full"></div>
    </div>
    <p class="text-white text-[14px] font-ips italic text-center">
      Announcement
    </p>
  </div>
  <div class="flex flex-col gap-[5px]">
    {
      announcements.map((announcement) => (
        <a
          href={announcement.link}
          class={`bg-[rgba(255,255,255,0.05)] ${announcement.link ? "hover:bg-white/10" : ""} transition-colors sm:flex items-center px-[30px] py-[20px] gap-[16px]`}
        >
          <p class="text-white text-[14px] sm:text-[17px] font-ips italic ">
            {announcement.date}
          </p>
          <div class="bg-white w-[1px] h-[40px] sm:h-[50px] hidden sm:block" />
          <p class="text-white text-[16px] sm:text-[18px] font-bold  flex gap-[10px] items-center">
            {announcement.content}
            {announcement.link && (
              <svg
                width="18"
                height="21"
                viewBox="0 0 18 21"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
                class="link-arrow transition-colors"
              >
                <path
                  d="M2 3.15411H16M16 3.15411V17.1541M16 3.15411L3.15411 16"
                  stroke="currentColor"
                />
              </svg>
            )}
          </p>
        </a>
      ))
    }
  </div>
</div>
