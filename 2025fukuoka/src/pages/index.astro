          </div>
          <h2
            class="absolute text-[calc(96*var(--scale))] font-bold text-black bottom-0 translate-y-[50%] left-[calc(120*var(--scale))]"
          >
            ゲストスピーカー
          </h2>
        </div>
        <div
          class="relative flex justify-between w-full gap-[calc(100*var(--scale))]"
        >
          {
            guestSpeakers.map((speaker, index) => (
              <div class="flex flex-col items-center gap-[calc(27*var(--scale))] flex-1">
                <div class="w-[calc(340*var(--scale))] h-[calc(340*var(--scale))] duotone">
                  <img src={speaker.imageUrl} alt={speaker.name} />
                </div>
                <div class="flex flex-col items-center">
                  <p class="text-[calc(16*var(--scale))] font-ips">
                    {speaker.role}
                  </p>
                  <p class="text-[calc(24*var(--scale))] font-bold">
                    {speaker.name}
                  </p>
                </div>
                <p class="text-[calc(14*var(--scale))] text-[#1c2a4c] w-[calc(340*var(--scale))]  leading-[1.36]">
                  {speaker.description}
                </p>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <!-- スポンサーセクション -->
  <section class="bg-[#ff9534] py-[calc(70*var(--scale))]">
    <div
      class="max-w-[calc(1440*var(--scale))] mx-auto px-[calc(100*var(--scale))]"
    >
      <div class="flex flex-col gap-[calc(10*var(--scale))]">
        <!-- タイトル -->
        <div class="relative">
          <h2
            class="text-[calc(150*var(--scale))] italic font-['IBM_Plex_Sans'] text-white/20 leading-[0.863]"
          >
            Sponsors
          </h2>
          <p
            class="absolute top-[calc(108*var(--scale))] left-[calc(106*var(--scale))] text-[calc(96*var(--scale))] font-bold text-[#1c2a4c] leading-[0.863]"
          >
            スポンサー
          </p>
        </div>

        <!-- スポンサーロゴグリッド -->
        <div class="py-[calc(60*var(--scale))]">
          <div class="grid grid-cols-3 gap-[calc(20*var(--scale))]">
            {
              sponsors.map((sponsor) => (
                <div class="bg-white rounded-[10px] aspect-square flex items-center justify-center p-[calc(40*var(--scale))]">
                  <img
                    src={sponsor.logoUrl}
                    alt={sponsor.name}
                    class="max-w-full max-h-full object-contain"
                  />
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
