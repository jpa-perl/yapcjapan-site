      </div>
    </div>
  </section>

  <!-- ゲストスピーカーセクション -->
  <style>
    .textStroke {
      -webkit-text-stroke: 1px var(--color-black);
      text-stroke: 1px var(--color-black);
    }

    .duotone {
      position: relative;
      overflow: hidden;
      border-radius: 50%;
      background-color: var(--color-primary);
    }

    .duotone img {
      filter: grayscale(100%) contrast(1.5) brightness(1.5);
      mix-blend-mode: multiply;
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: filter 0.3s ease;
    }

    .duotone:after {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: var(--color-black);
      mix-blend-mode: lighten;
    }

    .duotone:hover img {
      filter: grayscale(0%);
    }

    .duotone:hover,
    .duotone:hover:after {
      background-color: transparent;
    }
  </style>
  <section class="bg-white py-[calc(70*var(--scale))]">
